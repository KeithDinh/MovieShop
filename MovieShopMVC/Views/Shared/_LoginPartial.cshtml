@using ApplicationCore.ServiceInterfaces@inject ApplicationCore.ServiceInterfaces.ICurrentUser currentUser@if (User.Identity.IsAuthenticated){    <div class="navbar-collapse collapse">        <ul class="navbar-nav ml-auto">            <li class="nav-item pr-4">                <div class="dropdown">                    <button class="btn dropdown-toggle text-light" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">                        @currentUser.FullName                    </button>                    <div class="dropdown-menu dropdown-menu-right" aria-labelledby="dropdownMenuButton">                        <a class="dropdown-item" href="#">Library</a>                        <a class="dropdown-item" asp-controller="Account" asp-action="Logout">Logout</a>                        <a class="dropdown-item" href="#">View Profile</a>                        <a class="dropdown-item" href="#">Edit Profile</a>                    </div>                </div>            </li>        </ul>    </div>}else{    <div class="navbar-collapse collapse">        <ul class="navbar-nav ml-auto">            <li class="nav-item pr-4">                <a asp-action="Login" asp-controller="Account" class="btn btn-primary">Login</a>            </li>            <li class="nav-item pr-4">                <a asp-action="Register" asp-controller="Account" class="btn btn-primary">Register</a>            </li>        </ul>    </div>}